{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch pmtu-attack",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/pmtu-attack",
			"args": [
				// "-v",
				"-d",
				"-m", "ptb_flood_icmp6_echo",
				"fd12:34::/64",
				"fd12:35::3f05:2108:5d2b:570"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				},
				{
					"description": "Follow child",
					// "text": "-gdb-set follow-fork-mode parent",
					"text": "-gdb-set follow-fork-mode child",
					"ignoreFailures": false
				}
			],
			"preLaunchTask": "CMake: build"
		},
		{
			"name": "Launch rsrca-rnd",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/rsrca-rnd",
			"args": [ "-t", "cpp_mt", "-n", "1000000" ],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/build",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Set Disassembly Flavor to Intel",
					"text": "-gdb-set disassembly-flavor intel",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "CMake: build"
		}
	]
}
